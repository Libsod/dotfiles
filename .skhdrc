# ------------------Windows------------------

# change window focus within space
alt + shift - j : yabai -m window --focus south
alt + shift - k : yabai -m window --focus north
alt + shift - h : yabai -m window --focus west
alt + shift - l : yabai -m window --focus east

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen
shift + alt - u : yabai -m window --toggle zoom-parent

# resize alacritty
# ctrl + alt - t : yabai -m window --toggle float && yabai -m space --layout float && yabai -m window --resize abs:1740:1076

# resize kitty
ctrl + alt - t : yabai -m window --toggle float && yabai -m space --layout float && yabai -m window --resize abs:1740:1092

# resize neovide
ctrl + alt - n : yabai -m window --toggle float && yabai -m space --layout float && yabai -m window --resize abs:1750:1088

# neovide automation
ctrl + alt - g: yabai -m window $(yabai -m query --windows | jq ".[] | select(.app == \"Neovide\")" | jq ".id") --focus && yabai -m window $(yabai -m query --windows | jq ".[] | select(.app == \"Neovide\")" | jq ".id") --space 4 --focus && yabai -m space --layout float && yabai -m window mouse --focus && yabai -m window mouse --resize abs:1750:1088 && yabai -m window $(yabai -m query --windows | jq ".[] | select(.app == \"Alacritty\")" | jq ".id") --resize abs:1740:1076


# ------------------Space layouts------------------

# toggle layouts
alt - e : yabai -m space --layout bsp
alt - d : yabai -m space --layout stack
alt - s : yabai -m space --layout float

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance


# ------------------Sizes------------------

# increase window size
alt + shift - w : yabai -m window --resize top:0:-5
alt + shift - a : yabai -m window --resize left:-5:0
alt + shift - s : yabai -m window --resize bottom:0:5
alt + shift - d : yabai -m window --resize right:5:0

# decrease window size
cmd + shift - w : yabai -m window --resize top:0:5
cmd + shift - a : yabai -m window --resize left:5:0
cmd + shift - s : yabai -m window --resize bottom:0:-5
cmd + shift - d : yabai -m window --resize right:-5:0


# ------------------Spaces------------------

# move window to space ...
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

# focus on space ...
ctrl + alt - 1 : yabai -m space --focus 1;
ctrl + alt - 2 : yabai -m space --focus 2;
ctrl + alt - 3 : yabai -m space --focus 3;
ctrl + alt - 4 : yabai -m space --focus 4;
ctrl + alt - 5 : yabai -m space --focus 5;
ctrl + alt - 6 : yabai -m space --focus 6;
ctrl + alt - 7 : yabai -m space --focus 7;

# Create space on the active display
ctrl + alt - return : yabai -m space --create

# Delete focused space and focus first space on display
ctrl + alt - backspace : yabai -m space --destroy

# Move space left
ctrl + shift + alt - h : yabai -m space --move prev

# Move space right
ctrl + shift + alt - l : yabai -m space --move next


#  ------------------Services------------------

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service
ctrl + alt - r : yabai --restart-service
